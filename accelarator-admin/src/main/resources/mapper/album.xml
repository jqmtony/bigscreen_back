<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gochinatv.nvrs.dao.AlbumDao">

	<resultMap type="Album" id="Album">
		<id property="id" column="id" />
		<result property="albumId" column="album_id" />
		<result property="name" column="name" />
		<result property="subName" column="sub_name" />
		<result property="status" column="status" />
		<result property="labelId" column="label_id" />
		<result property="terminal" column="terminal" />
		<result property="keywords" column="keywords" />
		<result property="copyrightInfoId" column="copyright_info_id" />
		<result property="year" column="year" />
		<result property="onlineTime" column="online_time" />
		<result property="area" column="area" />
		<result property="score" column="score" />
		<result property="contentLevel" column="content_level" />
		<result property="isCharge" column="is_charge" />
		<result property="isEnd" column="is_end" />
		<result property="isHd" column="is_hd" />
		<result property="description" column="description" />
		<result property="director" column="director" />
		<result property="actor" column="actor" />
		<result property="host" column="host" />
		<result property="guest" column="guest" />
		<result property="language" column="language" />
		<result property="picX" column="pic_x" />
		<result property="picY" column="pic_y" />
		<result property="createTime" column="create_time" />
		<result property="updateTime" column="update_time" />
		<result property="syncTime" column="sync_time" />
	</resultMap>

	<select id="getList" resultMap="Album">
		select * from album
	</select>

    <update id="updateAlbumStatus" parameterType="Album">
       update album set status = #{status} where id = #{id}  
    </update>
</mapper>