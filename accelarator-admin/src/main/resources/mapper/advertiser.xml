<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gochinatv.accelarator.dao.AdvertiserDao">

	<resultMap type="Advertiser" id="Advertiser">
		<id property="id" column="id" />
		<result property="userName" column="user_name" />
		<result property="password" column="password" />
		<result property="realName" column="real_name" />
		<result property="countryCode" column="country_code" />
		<result property="areaCode" column="area_code" />
		<result property="cityCode" column="city_code" />
		<result property="email" column="email" />
		<result property="mobile" column="mobile" />
		<result property="remark" column="remark" />
		<result property="birthday" column="birthday" />
		<result property="createTime" column="create_time" />
		<!-- <result property="status" column="status" /> -->
	</resultMap>
	
	<select id="getListByEntity" resultMap="Advertiser" parameterType="Advertiser">
		select * from advertiser
		<where>
			1=1
			<if test="userName!=null">
				and user_name like CONCAT(CONCAT('%',#{userName}),'%')
			</if>
			<if test="realName!=null">
				and real_name like CONCAT(CONCAT('%',#{realName}),'%')
			</if>
			<if test="status!=0">
				and status=#{status}
			</if>
			<!-- <if test="countryCode!=null and countryCode!=''">
				and country_code = #{countryCode}
			</if>
			<if test="areaCode!=null and areaCode!=''" >
				and area_code = #{areaCode}
			</if>
			<if test="cityCode!=null and cityCode!=''">
				and city_code = #{cityCode}
			</if> -->
		</where>
		order by create_time desc
	</select>
	
	<select id="getAdvertiserByUserName" resultMap="Advertiser" parameterType="Advertiser">
		select * from advertiser where user_name = #{userName}
			<if test="id!=0">
				and id!=#{id}
			</if>
	</select>
	
	<insert id="save" parameterType="Advertiser">
	   insert into advertiser(
	            user_name,
	            password,
	            real_name,
	            mobile,
	            email,
	            country_code,
	            area_code,
	            city_code,
	            birthday,
	            remark,
	            create_time,
	            status
	            ) values (
	            #{userName},
	            #{password},
	            #{realName},
	            #{mobile},
	            #{email},
	            #{countryCode},
	            #{areaCode},
	            #{cityCode},
	            #{birthday},
	            #{remark},
	            #{createTime},
	            #{status}
	            )
	</insert>
	
	<update id="update" parameterType="Advertiser">
		update advertiser
		<set>
			user_name=#{userName},
            password=#{password},
            real_name=#{realName},
            mobile=#{mobile},
            email=#{email},
            country_code=#{countryCode},
            area_code=#{areaCode},
            city_code=#{cityCode},
            birthday=#{birthday},
            remark=#{remark},
            status=#{status}
		</set>
		where id = #{id}
	</update>
	
	<delete id="deleteByEntity" parameterType="Advertiser">
	  delete from advertiser where id = #{id}
	</delete>

</mapper>