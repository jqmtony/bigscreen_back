<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gochinatv.accelarator.dao.UserDao">

	<resultMap type="User" id="User">
		<id property="id" column="id" />
		<result property="userName" column="user_name" />
		<result property="password" column="password" />
		<result property="realName" column="real_name" />
		<result property="email" column="email" />
		<result property="mobile" column="mobile" />
		<result property="remark" column="remark" />
		<result property="createTime" column="create_time" />
		<result property="status" column="status" />
		
		<result property="roleId" column="role_id" />
	</resultMap>

	<select id="getEntityById" resultMap="User" parameterType="int">
		select * from user where id=#{id}
	</select>
	
	<select id="getUserByUserName" resultMap="User" parameterType="User">
		select * from user where user_name = #{userName}
			<if test="id!=0">
				and id!=#{id}
			</if>
	</select>
	
	<!-- 启用状态账号 -->
	<select id="getLoginUser" resultMap="User" parameterType="string">
		select * from user where user_name = #{userName} and status=1
	</select>

	<select id="getListByEntity" resultMap="User" parameterType="User">
		select * from user
		<where>
			1=1
			<if test="userName!=null">
				and user_name like CONCAT(CONCAT('%',#{userName}),'%')
			</if>
			<if test="realName!=null">
				and real_name like CONCAT(CONCAT('%',#{realName}),'%')
			</if>
		</where>
		order by create_time desc
	</select>
	
		<insert id="save" parameterType="User">
	   insert into user(
	            user_name,
	            password,
	            real_name,
	            mobile,
	            email,
	            remark,
	            create_time,
	            status
	            ) values (
	            #{userName},
	            #{password},
	            #{realName},
	            #{mobile},
	            #{email},
	            #{remark},
	            #{createTime},
	            #{status}
	            )
	</insert>
	
	<update id="update" parameterType="User">
		update user
		<set>
			<if test="userName!=null">
				user_name=#{userName},
			</if>
			<if test="password!=null">
				password=#{password},
			</if>
			<if test="realName!=null">
				real_name=#{realName},
			</if>
			<if test="mobile!=null">
				mobile=#{mobile},
			</if>
			<if test="email!=null">
				email=#{email},
			</if>
			<if test="status!=0">
				status=#{status},
			</if>
			<if test="remark!=null">
				remark=#{remark}
			</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="deleteByEntity" parameterType="User">
	  delete from user where id = #{id}
	</delete>

    <select id="getUsers" resultMap="User">
		SELECT * FROM USER WHERE status=1 
	</select>
    
</mapper>