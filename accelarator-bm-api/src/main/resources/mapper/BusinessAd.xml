<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gochinatv.accelarator.bmapi.dao.BusinessAdDao">

	<resultMap type="com.gochinatv.accelarator.bmapi.bean.BusinessAd" id="BusinessAd">
		<id property="id" column="id" />
		<result property="name" column="name" />
		<result property="price" column="price" />
		<result property="description" column="description" />
		<result property="imagePath" column="image_path" />
		<result property="sort" column="sort" />
		<result property="createTime" column="create_time" />
		
		<result property="ename" column="ename" />
		<result property="refreshTime" column="refresh_time" />
		<result property="deviceId" column="device_id" />
		<result property="businessId" column="business_id" />
		<result property="placeId" column="place_id" />
	</resultMap>
	
	<select id="queryList" resultMap="BusinessAd" parameterType="BusinessAd">
		select * from system_advertisement where device_id=#{deviceId} order by create_time asc
	</select>
	
	
	<insert id="save" parameterType="BusinessAd">
	   insert into system_advertisement(
	            name,
	            price,
	            image_path,
	            description,
	            sort,
	            create_time
	            ) values (
	            #{name},
	            #{price},
	            #{imagePath},
	            #{description},
	            #{sort},
	            #{createTime}
	            )
	</insert>
	
	<update id="update" parameterType="BusinessAd">
		update system_advertisement
		<set>
			<if test="name!=null">
				name=#{name},
			</if>
			<if test="price!=null">
				price=#{price},
			</if>
			<if test="sort!=0">
				sort=#{sort},
			</if>
			<if test="description!=null">
				description=#{description},
			</if>
			<if test="imagePath!=null">
				image_path=#{imagePath}
			</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete" parameterType="Integer">
	  delete from system_advertisement where id = #{businessAdId}
	</delete>
	
</mapper>